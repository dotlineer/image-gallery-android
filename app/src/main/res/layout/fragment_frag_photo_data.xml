<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/frameLayout">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cl_photo_data">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title_data" app:layout_constraintStart_toEndOf="@+id/tv_title"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/tv_title"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date_data" app:layout_constraintStart_toEndOf="@+id/tv_date"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/tv_date"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tags_data" app:layout_constraintStart_toEndOf="@+id/tv_tags"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/tv_tags"/>
        <TextView
                android:text="@string/frag_photo_and_data_title"
                android:layout_width="59dp"
                android:layout_height="18dp"
                android:id="@+id/tv_title" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
        <TextView
                android:text="@string/frag_photo_and_data_date"
                android:layout_width="59dp"
                android:layout_height="19dp"
                android:id="@+id/tv_date" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" app:layout_constraintStart_toStartOf="@+id/tv_title"
        />
        <TextView
                android:text="@string/frag_photo_and_data_tags"
                android:layout_width="60dp"
                android:layout_height="19dp"
                android:id="@+id/tv_tags" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_date" app:layout_constraintStart_toStartOf="@+id/tv_date"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>